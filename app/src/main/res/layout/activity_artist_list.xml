<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_main_padding"
    tools:context=".activities.ArtistListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            style="@style/MainButtonStyle"
            android:id="@+id/playing_now_bt_id"
            android:drawableStart="@drawable/ic_playing_now_icon"
            android:drawableLeft="@drawable/ic_playing_now_icon"
            android:text="@string/playing_now"
            />

    </LinearLayout>

    <TextView
        style="@style/TitleLabelStyle"
        android:text="@string/artists" />

    <ListView
        android:id="@+id/artists_lv_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        />

</LinearLayout>