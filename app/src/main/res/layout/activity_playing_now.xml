<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_main_padding"
    tools:context=".activities.PlayingNowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            style="@style/MainButtonStyle"
            android:id="@+id/artist_list_bt_id"
            android:drawableStart="@drawable/ic_artist_icon"
            android:drawableLeft="@drawable/ic_artist_icon"
            android:text="@string/artist_list"
            />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_playing_now_icon"
        android:tint="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/playing_now_layout_margin_bottom"
        android:orientation="vertical">

        <TextView
            style="@style/SongMainLabelStyle"
            android:id="@+id/playing_now_label_tv_id"
            tools:visibility="visible"
            android:text="@string/playing_now"
             />

        <TextView
            style="@style/SongMainLabelStyle"
            android:id="@+id/no_song_playing_label_tv_id"
            tools:visibility="visible"
            android:text="@string/no_song_playing" />

        <TextView
            style="@style/SongLabelStyle"
            android:id="@+id/playing_song_name_tv_id"
            tools:visibility="visible"
            tools:text="Name: Love generation" />

        <TextView
            style="@style/SongLabelStyle"
            android:id="@+id/playing_song_artist_tv_id"
            tools:visibility="visible"
            tools:text="Artist: Bob Sinclar" />

        <TextView
            style="@style/SongLabelStyle"
            android:id="@+id/playing_song_time_tv_id"
            tools:visibility="visible"
            tools:text="Time: 3:25" />

    </LinearLayout>

</LinearLayout>